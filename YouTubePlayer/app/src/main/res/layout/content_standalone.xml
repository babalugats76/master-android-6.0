<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.colestock.youtubeplayer.StandaloneActivity"
    tools:showIn="@layout/activity_standalone">

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/btnPlayVideo"
        android:text="@string/play_video_text">
    </Button>

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/btnPlayPlaylist"
        android:text="@string/play_playlist_text">
    </Button>

</LinearLayout>
